<div class="c-form__item">
  <label class="c-form__label {{modifier_class}}" for="labelInputText">A label for a text input <span class="c-form__required" aria-label="Required" title="Required">*</span></label>
  <input class="c-form__text" type="text" id="labelInputText" placeholder="Enter some text">
</div>

<fieldset class="c-form__checkboxes">
  <legend><span class="c-form__label">Checkbox</span></legend>
    <ul class="c-form__list">
      <li class="c-form__item -checkbox">
        <input class="c-form__checkbox" id="check" type="checkbox" name="check" value="check">
        <label class="c-form__label -option" for="check">Label for checkboxes</label>
      </li>
    </ul>
</fieldset>

<fieldset class="c-form__radios">
  <legend><span class="c-form__label">Radio</span></legend>
    <ul class="c-form__list">
      <li class="c-form__item -radio">
        <input class="c-form__radio" id="radio" type="radio" name="radio" value="radio">
        <label class="c-form__label -option" for="radio">Label for radio</label>
      </li>
    </ul>
</fieldset>
